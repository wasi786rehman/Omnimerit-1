                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br>
                            @*<form class="form-horizontal form-label-left">*@
                            @using (Html.BeginForm("AddTransportAllocation", "Employee", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Route Code</label>
                                    <div class="col-md-9 col-sm-9 col-xs-12">


                                        @Html.DropDownListFor(x => x.RouteCode, new SelectListItem[]{
                                        new SelectListItem() {Text = "007", Value="007"},
                                         new SelectListItem() {Text = "454", Value="454"},
                                        new SelectListItem() {Text = "161", Value="161"}}, "Please Select", new { @class = "form-control", id = "routecode" })
                                        @Html.ValidationMessageFor(x => x.RouteCode, "", new { @class = "text-danger" })
                                     
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Source</label>
                                    <div class="col-md-9 col-sm-9 col-xs-12">

                                        <input name="Id" type="hidden" id="idlabel" class="form-control" value="0" />


                                        @Html.DropDownListFor(x => x.Source, new SelectListItem[]{
                                        new SelectListItem() {Text = "Dwarka", Value="Dwarka"},
                                         new SelectListItem() {Text = "Mundka", Value="Mundka"},
                                        new SelectListItem() {Text = "Vaishali", Value="Vaishali"}}, "Please Select", new { @class = "form-control", id = "source" })
                                        @Html.ValidationMessageFor(x => x.Source, "", new { @class = "text-danger" })
                                        @*<select class="form-control" name="Source" id="source">
                                            <option>Select Source</option>
                                            <option>Dwarka</option>
                                            <option>Mundka</option>
                                            <option>Vaishali</option>
                                        </select>*@
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Destination</label>
                                    <div class="col-md-9 col-sm-9 col-xs-12">
                                        @Html.DropDownListFor(x => x.Destination, new SelectListItem[]{
                                        new SelectListItem() {Text = "Noida", Value="Noida"},
                                        new SelectListItem() {Text = "Greater Noida", Value="Greater Noida"},
                                        new SelectListItem() {Text = "Greater Noida", Value="Greater Noida"},
                                        new SelectListItem() {Text = "Rajiv Chowk", Value="Rajiv Chowk"}}, "Please Select", new { @class = "form-control", id = "destination" })
                                        @Html.ValidationMessageFor(x => x.Destination, "", new { @class = "text-danger" })


                                        @*<select class="form-control" name="Destination" id="destination">
                                            <option>Select Destination</option>
                                            <option>Noida</option>
                                            <option>Greater Noida</option>
                                            <option>Faridabad</option>
                                            <option>Rajiv Chowk</option>
                                        </select>*@
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">User Type</label>
                                    <div class="col-md-9 col-sm-9 col-xs-12">

                                        @*<input type="text" class="form-control" placeholder="Lecture Code">*@

                                        @Html.DropDownListFor(x => x.UserType, new SelectListItem[]{
                                        new SelectListItem() {Text = "Student", Value="Student"},
                                        new SelectListItem() {Text = "Employee", Value="Employee"}}, "Please Select", new { @class = "form-control", id = "user" })
                                        @Html.ValidationMessageFor(x => x.UserType, "", new { @class = "text-danger" })

                                        @*<select class="form-control" name="UserType" id="user">
                                            <option>Select User type</option>
                                            <option>Student</option>
                                            <option>Employee</option>   
                                        </select>*@
                                      

                                    </div>

                                </div>
                                    <div class="form-group" id="name">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Name</label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">

                                           
                                            @Html.TextBoxFor(x=>x.UserName,new { id = "username" ,Placeholder="Name",@class="form-control"})
                                            @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Start Date</label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">

                                            @*<input type="text" class="form-control" placeholder="Lecture Code">*@
                                           
                                            @Html.TextBoxFor(x=>x.StartDate, new { id = "startdate",type="date",@class="form-control" })
                                            @Html.ValidationMessageFor(x => x.StartDate, "", new { @class = "text-danger" })
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">End Date</label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">

                                            @*<input type="text" class="form-control" placeholder="Lecture Code">*@

                                            @Html.TextBoxFor(x=>x.EndDate, new { id = "enddate", type = "date", @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.EndDate, "", new { @class = "text-danger" })
                                        </div>

                                    </div>
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                                        <button type="submit" class="btn btn-success">Save</button>


                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
