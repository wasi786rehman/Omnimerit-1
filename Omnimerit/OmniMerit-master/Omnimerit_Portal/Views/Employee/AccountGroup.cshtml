<script src="~/Scripts/Utilities/Utilities.js"></script>
<script src="~/Content/Script/AccountGroup.js"></script>

<style>
    body {
        background-color: white;
        margin-top: 1%;
    }
</style>
<div class="row">

    <div class="col-md-6 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Account Group <small></small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                @using (Html.BeginForm("AddAccountGroup", "Employee", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Account Name</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            @*<input type="text" class="form-control" placeholder="Ledger Account">*@ 
                            @Html.TextBoxFor(x => x.AccountName, new { @class = "form-control ", placeholder = "Account Name", id = "AccName" })
                            @Html.ValidationMessageFor(x => x.AccountName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Group</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            @Html.DropDownListFor(x => x.GroupUnder, new SelectListItem[]{    
                                new SelectListItem() {Text = "Professor", Value="Professor"},
                                new SelectListItem() {Text = "Principle", Value="Principle"},
                                new SelectListItem() {Text = "Staff", Value="Staff"}},"Please Select" , new { @class = "form-control", id = "grpunder" })
                            @Html.ValidationMessageFor(x => x.GroupUnder, "", new { @class = "text-danger" })
                            @*<select name="GroupUnder" class="form-control" id="grpunder">
                                <option>Professor</option>
                                <option>Principle</option>
                                <option>Staff</option>
                            </select>*@
                            <input name="Id" type="hidden" id="idlabel" class="form-control" value="0" />
                           
                    </div>
                </div>
                   

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                            <button type="submit" id="submitbtn" class="btn btn-success">Create</button>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><small></small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table class="table table-striped" id="result"></table>

            </div>
        </div>
    </div>

</div>



